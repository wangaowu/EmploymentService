<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_title"
            layout="@layout/common_title_layout" />

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <include layout="@layout/common_1px_hor_line" />

        <LinearLayout
            android:id="@+id/ll_check_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_basic_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_selector"
                android:gravity="center_horizontal"
                android:onClick="clickMain"
                android:padding="10dp"
                android:text="首页"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_person_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_selector"
                android:gravity="center_horizontal"
                android:onClick="clickManage"
                android:padding="10dp"
                android:text="管辖人员"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_house_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_selector"
                android:gravity="center_horizontal"
                android:onClick="clickMine"
                android:padding="10dp"
                android:text="我的"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</layout>
